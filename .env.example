# AI Bible Assistant 환경변수 설정
# 이 파일을 .env로 복사하고 실제 값으로 변경하세요

# 기본 설정
DEBUG=false
PORT=8080
HOST=0.0.0.0

# Claude AI API 설정 (필수)
CLAUDE_API_KEY=sk-ant-api03-your-api-key-here
CLAUDE_MODEL=claude-3-haiku-20240307
CLAUDE_MAX_TOKENS=800
CLAUDE_TEMPERATURE=0.7

# MongoDB 설정 (필수)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/
DATABASE_NAME=bible_assistant

# 성경 임베딩 파일 설정
# 로컬 파일이 있으면 우선 사용, 없으면 URL에서 다운로드
BIBLE_EMBEDDINGS_URL=https://github.com/your-repo/releases/download/v1.0/bible_embeddings.json.gz

# 성능 및 메모리 설정
MAX_MEMORY_MB=400
CACHE_SIZE_LIMIT=100
SIMILARITY_THRESHOLD=0.3
MAX_BIBLE_RESULTS=5
MAX_CONVERSATION_HISTORY=5
SESSION_TIMEOUT_HOURS=24

# 로깅 설정
LOG_LEVEL=INFO
